<MWElements>
  <MWElement name="Stimulus Display Mouse Control">
    <!-- XPath 2.0 expression defining nodes of this type -->
    <!-- -->
    <match_signature>iodevice[@type="display_mouse_control"]</match_signature>
    
    <!-- Which super-types does the object belong to -->
    <isa>IODevice</isa>
    
    <description>
      An IODevice object that alters variable values based on where the mouse is
      over the stimulus display
    </description>
    
    <!-- Payload -->
    <!-- This XML gets inserted when you drop this object into the project -->
    <code>
      <iodevice type="display_mouse_control" tag="My Stimulus Display Mouse Control"
                x="" y="" wheel="" wheel_scale="" wheel_min="" 
                wheel_max="" counter="", counter_min="0" counter_max="1"/>
      <!-- <action type="my_mw_component" tag="My MW Action" />
        ... you get the idea ...
        ...
        -->
    </code>
  </MWElement>
</MWElements>
